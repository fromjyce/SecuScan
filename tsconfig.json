{
	"compilerOptions": {
	  "module": "Node16",
	  "target": "ES2022",
	  "lib": ["ES2022"],
	  "sourceMap": true,
	  "outDir": "./out",
	  "rootDir": "./src",
	  "strict": true,
	  "esModuleInterop": true,
	  "declaration": true,
	  "types": ["node", "mocha", "vscode"],
	  "typeRoots": ["./node_modules/@types"]
	},
	"include": [
	  "src/**/*.ts"  ,
	  "src/test/**/*.ts"
	],
	"exclude": [
	  "node_modules"
	]
  }
  