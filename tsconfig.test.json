{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./out",  // Output directory for compiled test files
        "rootDir": "./src",      // Root directory for source files including tests
        "declaration": false     // No need for declaration files for tests
    },
    "include": [
        "src/**/*.ts"           // Include all TypeScript files in the src directory
    ],
    "exclude": [
        "node_modules"          // Exclude node_modules
    ]
}
