{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./out/test",  // Output directory for compiled test files
        "rootDir": "./src/test", // Root directory for test source files
        "declaration": false     // No need for declaration files for tests
    },
    "include": [
        "src/test/**/*.ts"      // Include all TypeScript files in the src/test directory
    ],
    "exclude": [
        "node_modules"          // Exclude node_modules
    ]
}
