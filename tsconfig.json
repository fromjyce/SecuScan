{
	"compilerOptions": {
	  "module": "Node16",
	  "target": "ES2022",
	  "lib": ["ES2022"],
	  "sourceMap": true,
	  "outDir": "./out",
	  "rootDir": "./src",
	  "strict": true,
	  "esModuleInterop": true,
	  "declaration": true
	},
	"include": [
	  "src/**/*.ts"   // Include all TypeScript files in the src folder
	],
	"exclude": [
	  "node_modules"  // Exclude node_modules folder
	]
  }
  